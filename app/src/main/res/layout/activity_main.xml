<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22272B"
    android:clickable="true"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myImageView"/>
    <Button
        android:id="@+id/bt_camera"
        android:layout_width="134dp"
        android:layout_height="92dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#DCE0E3"
        android:drawableTop="@drawable/ic_action_camera"
        android:textColor="#F7BD00"
        app:iconPadding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:text="Câmera" />

    <Button
        android:id="@+id/bt_gallery"
        android:layout_width="134dp"
        android:layout_height="92dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#DCE0E3"
        android:drawableTop="@drawable/ic_action_gallery"
        android:textColor="#F7BD00"
        app:iconPadding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:text="Galeria" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="292dp"
        android:text="Selecione uma das opções para iniciar:"
        android:textAlignment="center"
        android:textColor="#DCE0E3"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>